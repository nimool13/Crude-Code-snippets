<nav class="pagination is-centered" role="navigation" aria-label="pagination" role="navigation" aria-label="pagination">
  <ul class="pagination-list">
    <% if (page > 1) { %>
    <li>
      <a
        href="/discover?page=<%- page - 1 %><% if (locals.search) { %> &search=<%- search %> <% } %>"
        class="pagination-link"
        aria-label="Previous page"
      >
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
    <li>
      <a
        class="pagination-link <% if (page === i) { %> is-current <% } %>"
        href="/discover?page=<%- i %><% if (locals.search) { %>&search=<%- search %> <% } %>"
        ><%- i %></a
      >
    </li>
    <% } %> <% if (page < totalPages) { %>
    <li>
      <a
        href="/discover?page=<%- page + 1 %><% if (locals.search) { %>&search=<%- search %> <% } %>"
        class="pagination-link"
        aria-label="Next page"
      >
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
    <% } %>
  </ul>
</nav>
