<div class="field">
  <div class="control">
    <button id="deleteBtn" class="button is-danger" type="button">
      <% if (icon) { %>
      <span class="icon is-small">
        <span class="iconify" data-icon="akar-icons:trash-can"></span>
      </span>
      <% } else { %> Delete <% } %>
    </button>
  </div>
</div>

<script>
  document.getElementById('deleteBtn').addEventListener('click', (e) => {
    // show a confirmation dialog
    const confirmation = confirm('Are you sure you want to delete this snippet?')
    // if the user confirms, delete the snippet by go to the delete route
    if (confirmation) {
      window.location.href = '/snippet/<%- snippet.id %>/delete'
    }
  })
</script>
