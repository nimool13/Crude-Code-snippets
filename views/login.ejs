<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <section class="container">
      <div class="is-flex is-justify-content-center is-align-items-center">
        <div class="column has-text-centered" style="margin-top: 5rem">
          <h1 class="title is-2">Login</h1>
          <% if (typeof error !== 'undefined') { %>
          <div class="notification has-text-left is-danger">
            <p><%= error %></p>
          </div>
          <% } %>
          <form action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="field">
              <div class="control">
                <input class="input" type="text" name="username" placeholder="Username" required />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input" type="password" name="password" placeholder="Password" required />
              </div>
            </div>
            <button class="button is-block is-primary is-fullwidth" type="submit">Login</button>
            <br />
            <small
              ><em> Don't have an account? <a href="/register">Register</a> </em></small
            >
          </form>
        </div>
      </div>
    </section>
    <%- include('./partials/footer') %>
  </body>
</html>
