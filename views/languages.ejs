<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %> <%- include('./partials/prism/head') %>
  </head>
  <style>
    .card {
      transition: all 0.2s ease-in-out;
    }
    .card:hover {
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
      transform: translateY(-5px);
    }
  </style>
  <body>
    <%- include('./partials/navbar.ejs') %>

    <div class="container">
      <header id="header" class="has-text-centered">
        <h1 class="title is-size-3">Languages</h1>
      </header>

      <div id="languagesList" class="columns is-multiline">
        <% for (let language of languages) { %>
        <div class="column is-one-quarter">
          <a href="/language/<%- language.name %>">
            <div class="card">
              <div class="card-content has-text-centered">
                <p class="title is-5"><%- language.name %></p>
                <p class="subtitle is-3"><%- language.count %></p>
              </div>
            </div>
          </a>
        </div>
        <% } %>
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
